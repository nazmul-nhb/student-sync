{
	"name": "student-sync-server",
	"version": "1.0.0",
	"main": "src/index.ts",
	"scripts": {
		"dev": "nodemon src/index.ts",
		"start": "node dist/index.js",
		"build": "rimraf dist && tsc",
		"lint": "eslint . --fix",
		"format": "prettier --write src/",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.ts": [
			"eslint --fix",
			"prettier --write src/"
		]
	},
	"keywords": [
		"typescript",
		"express",
		"mongoose",
		"mongodb",
		"node"
	],
	"author": "Nazmul Hassan",
	"license": "ISC",
	"description": "Student Sync - A Simple Web App to manage student information",
	"dependencies": {
		"@nazmul-nhb/id-generator": "^1.2.3",
		"bcryptjs": "^2.4.3",
		"cloudinary": "^2.5.1",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^4.21.0",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.7.3"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.6",
		"@types/cors": "^2.8.17",
		"@types/dotenv": "^6.1.1",
		"@types/express": "^4.17.21",
		"@types/jsonwebtoken": "^9.0.7",
		"@types/mongoose": "^5.11.96",
		"@types/node": "^22.8.4",
		"@typescript-eslint/eslint-plugin": "^8.12.2",
		"@typescript-eslint/parser": "^8.12.2",
		"eslint": "^9.13.0",
		"eslint-config-prettier": "^9.1.0",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"nodemon": "^3.1.7",
		"prettier": "^3.3.3",
		"rimraf": "^6.0.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.6.3"
	}
}
